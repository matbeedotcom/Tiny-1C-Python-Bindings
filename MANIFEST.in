# Include essential files
include README.md
include LICENSE
include CLAUDE.md
include pyproject.toml
include setup_crossplatform.py
include python_bindings_tiny.cpp

# Include headers
recursive-include include *.h *.hpp
recursive-include libs/include *.h *.hpp

# Include only x86_64 Linux libraries (for wheel builds)
include libs/linux/x86-linux_libs/*.a

# Include Windows libraries (both 32 and 64-bit)
recursive-include libs/win *.lib *.dll

# Exclude all shared libraries and other architectures
global-exclude *.so *.so.*
exclude libs/linux/aarch64-*
exclude libs/linux/arm-*
exclude libs/linux/mips-*

# Exclude build artifacts
global-exclude *.pyc __pycache__
global-exclude *.o *.obj
global-exclude .git* .DS_Store
